<h2>New Game</h2>
<p><%= @letters %></p>
<ul class="container mw-100c d-flex list-unstyled">
  <% @letters.each do |letter| %>
      <li class="container bg-primary pr-2 m-1" style="width:30px; height:30px;" ><%= letter.capitalize %></li>
    <% end %>
</ul>

<p>What is the longest word you can find?</p>

<form class="input-group " action="/score" method="post" data-turbo="false">
  <input class="border border-1 rounded-start col-11" type="text" name="new">
  <input class="btn btn-primary rounded-end col-1" type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
